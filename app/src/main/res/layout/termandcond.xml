<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_dialog"
    android:padding="5dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_gravity="center"
        android:fontFamily="@font/lato_black"
        android:gravity="center_horizontal"
        android:elevation="10dp"
        android:text="About EasyLearn">

    </TextView>

    <View
        android:id="@+id/View2"
        android:layout_width="120dp"
        android:layout_height="7dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:background="#366ce0"
        android:elevation="10dp"
        android:layout_alignStart="@id/textview1"
        android:layout_below="@+id/textview1">
    </View>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:fontFamily="@font/lato_bold"
        android:textSize="15sp"
        android:lines="2"
        android:layout_gravity="center_horizontal"
        android:text="(1). EasyLearn is German language learning app for beginners.">

    </TextView>

    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="@android:color/black"
    android:fontFamily="@font/lato_bold"
        android:layout_marginTop="5dp"
    android:textSize="15sp"
    android:lines="1"
    android:layout_gravity="center_horizontal"
    android:text="(2). It provides basic information about language to user.">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:fontFamily="@font/lato_bold"
        android:textSize="15sp"
        android:lines="1"
        android:layout_gravity="center_horizontal"
        android:text="(3). On Homepage user can see what he is going to learn .">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/lato_bold"
        android:textSize="15sp"
        android:lines="1"
        android:layout_gravity="center_horizontal"
        android:text="(4). The contains interesting quizzes related to the topic .">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/lato_bold"
        android:textSize="15sp"
        android:lines="3"
        android:layout_gravity="center_horizontal"
        android:text="(5). It also contains chat option where user can interact with various users to develop there vocabulary. ">

    </TextView>


</LinearLayout>